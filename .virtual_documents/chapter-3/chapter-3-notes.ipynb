def execution_time(func):
    
    def inner(*args, **kwargs):
        start = time.perf_counter()
        func(*args, **kwargs)
        end = time.perf_counter()
        
        print("Run time: {:0.1f} seconds".format(end - start))
    
    
    return inner


def sleep_copy(seconds):
    return sleep(seconds)


